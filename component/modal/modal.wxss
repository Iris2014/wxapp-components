/* color system */
/* semantic */
.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 10;
  text-align: center;
}
.modal .modal_mask {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.modal .modal_view {
  position: relative;
  overflow: hidden;
  width: 280px;
  margin: 45% auto 0;
  padding-top: 30px;
  border-radius: 8px;
  background-color: white;
}
.modal .modal_title {
  font-size: 18px;
  color: black;
  margin-top: -10px;
  padding-bottom: 10px;
}
.modal .modal_content {
  font-size: 16px;
  color: #212121;
  line-height: 22px;
  padding: 0 35px 20px;
}
.modal .modal_content .link_color {
  color: #477DB2;
}
.modal .modal_btns {
  background-image: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAIAAAACAQMAAABIeJ9nAAAABlBMVEUAAADX19f7b47VAAAAAXRSTlMAQObYZgAAAAxJREFUCNdjOMDAAAACRADBQq93fQAAAABJRU5ErkJggg==");
  background-repeat: repeat-x;
  background-position: top;
  background-size: 1px;
  display: flex;
  font-size: 18px;
  line-height: 25px;
}
.modal .modal_btn {
  flex: 1;
  padding: 12px 0 13px;
}
.modal .modal_btn:active {
  background-color: rgba(0, 0, 0, 0.1);
}
.modal .modal_btn.confirm {
  color: #EF4945;
}
.modal .modal_btn.cancel {
  background-image: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAIAAAACAQMAAABIeJ9nAAAABlBMVEUAAADX19f7b47VAAAAAXRSTlMAQObYZgAAAAxJREFUCNdjcGBwAAABBACBuS4d8AAAAABJRU5ErkJggg==");
  background-repeat: repeat-y;
  background-position: right;
  background-size: 1px;
  color: #A0A0A0;
}
